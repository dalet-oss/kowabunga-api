{%- import "openapi/oas.macros.yml.j2" as oas with context %}
{%- set adapter_schema = 'Adapter' %}
{%- set adapter_desc = 'network adapter' %}
{%- set adapter_tag = 'adapter' %}
{%- set adapter_param = 'AdapterID' %}

components:
  schemas:
{{ oas.Schema(adapter_schema, adapter_desc, ['name']) }}
{{ oas.StringProperty('id', 'The network adapter ID (auto-generated)') }}
{{ oas.StringProperty('name', 'The network adapter name') }}
{{ oas.StringProperty('description', 'The network adapter description') }}
{{ oas.StringProperty('mac', 'The network adapter hardware address (e.g. 00:11:22:33:44:55). Auto-generated if unspecified') }}
{{ oas.StringArrayProperty('addresses', 'The network adapter list of associated IPv4 addresses') }}
{{ oas.BoolProperty('reserved', 'The network adapter is a reserved adapter (e.g. router), where the same hardware address can be reused over several subnets', 'false') }}

  parameters:
{{ oas.StringPathParam(adapter_param, 'adapterId', 'The ID of the network adapter') }}

paths:
  /adapter:
{{ oas.GetAll('GetAllAdapters', adapter_desc, [adapter_tag]) }}

  /adapter/{adapterId}:
{{ oas.Parameters([adapter_param]) }}
{{ oas.Read('GetAdapter', adapter_schema, adapter_desc, [adapter_tag]) }}
{{ oas.Update('UpdateAdapter', adapter_schema, adapter_desc, [adapter_tag]) }}
{{ oas.Delete('DeleteAdapter', adapter_desc, [adapter_tag]) }}
