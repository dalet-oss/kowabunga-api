{%- import "openapi/oas.macros.yml.j2" as oas with context %}

components:
  schemas:
{{ oas.Schema(resources.adapter.schema, resources.adapter.desc, ['name']) }}
{{ oas.StringProperty('id', 'The network adapter ID (auto-generated)') }}
{{ oas.StringProperty('name', 'The network adapter name') }}
{{ oas.StringProperty('description', 'The network adapter description') }}
{{ oas.StringProperty('mac', 'The network adapter hardware address (e.g. 00:11:22:33:44:55). Auto-generated if unspecified') }}
{{ oas.StringArrayProperty('addresses', 'The network adapter list of associated IPv4 addresses') }}
{{ oas.BoolProperty('reserved', 'The network adapter is a reserved adapter (e.g. router), where the same hardware address can be reused over several subnets', 'false') }}

  parameters:
{{ oas.StringPathParam(resources.adapter.paramSchema, resources.adapter.paramId, 'The ID of the network adapter') }}

paths:
  /adapter:
{{ oas.List('GetAllAdapters', resources.adapter.desc, [resources.adapter.tag]) }}

  /adapter/{ {{ resources.adapter.paramId }} }:
{{ oas.Parameters([resources.adapter.paramSchema]) }}
{{ oas.Read('GetAdapter', resources.adapter.schema, resources.adapter.desc, [resources.adapter.tag]) }}
{{ oas.Update('UpdateAdapter', resources.adapter.schema, resources.adapter.desc, [resources.adapter.tag]) }}
{{ oas.Delete('DeleteAdapter', resources.adapter.desc, [resources.adapter.tag]) }}
